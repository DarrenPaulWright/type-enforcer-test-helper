{
	"exclude": [
		"node_modules"
	],
	"include": [
		"index.ts",
		"src/**/*.ts"
	],
	"module": "esnext",
	"compilerOptions": {
		"outDir": "./dist/js",
		"declaration": true,
		"declarationDir": "./dist/types",
		"emitDeclarationOnly": false,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"alwaysStrict": true,
		"exactOptionalPropertyTypes": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"diagnostics": true
	}
}
